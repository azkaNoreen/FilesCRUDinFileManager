    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/ok"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:textSize="11sp"
        />

</LinearLayout>